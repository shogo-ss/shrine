<% if current_user.concern?(shrine) %>
  <%= form_with(model: current_user.concerns.find_by(shrine_id: shrine.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :shrine_id, shrine.id %>
    <%= f.submit '気になる', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.concerns.build, local: true) do |f| %>
    <%= hidden_field_tag :shrine_id, shrine.id %>
    <%= f.submit '気になる', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>