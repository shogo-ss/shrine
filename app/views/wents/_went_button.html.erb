<% if current_user.went?(shrine) %>
  <%= form_with(model: current_user.wents.find_by(shrine_id: shrine.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :shrine_id, shrine.id %>
    <%= f.submit '行った', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.wents.build, local: true) do |f| %>
    <%= hidden_field_tag :shrine_id, shrine.id %>
    <%= f.submit '行った', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>