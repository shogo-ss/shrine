          <li class="nav-item"><%= link_to "神社登録", new_shrine_path, class:"nav-link" %></li>
          <li class="nav-item"><%= link_to "マイページ", wents_user_path(current_user), class:"nav-link" %></li>
          <li class="nav-item"><%= link_to "ログアウト", logout_path, method: :delete, class:"nav-link" %></li>
